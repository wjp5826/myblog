<%- include('header') %>

<div class="col-xs-10 col-xs-offset-1 col-sm-4 col-sm-offset-4">
    <form method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label class="">用户名</label>
        <input class="form-control" placeholder="用户名" type="text" name="name">
      </div>
      <div class="form-group required">
        <label>密码</label>
        <input class="form-control" placeholder="密码" type="password" name="password">
      </div>
      <div class="form-group required">
        <label>重复密码</label>
        <input class="form-control" placeholder="重复密码" type="password" name="repassword">
      </div>
      <div class="form-group required">
        <label>性别</label>
        <select class="form-control" name="gender">
          <option value="m">男</option>
          <option value="f">女</option>
          <option value="x">保密</option>
        </select>
      </div>
      <div class="form-group required">
        <label>头像</label>
        <input type="file" name="avatar">
      </div>
      <div class="form-group required">
        <label>个人简介</label>
        <textarea class="form-control" name="bio" rows="5"></textarea>
      </div>
      <input type="submit" class="btn btn-info btn-block" value="注册">
  </form>
</div>

<%- include('footer') %>